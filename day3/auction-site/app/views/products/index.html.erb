<h1><%= @my_user.name %> - Products list</h1>

<% @my_products.each do |product| %>
	<ul>
		<li>
			<strong><%= product.title %></strong>
			<%= product.deadline %>
			<%= link_to 'Details', user_product_path(@my_user, product) %>
			<%= link_to 'Delete', user_product_path(@my_user, product), method: :delete %>

		</li>
	</ul>
<% end %>

<%= link_to 'User details', user_path(@my_user) %>
<%= link_to 'New product', new_user_product_path(@my_user) %>